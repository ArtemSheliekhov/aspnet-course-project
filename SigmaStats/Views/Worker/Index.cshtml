@model IEnumerable<SigmApi.Models.Worker>
@{
    ViewData["Title"] = "Workers List";
}

<h2 class="mb-3">All Workers</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary mb-3">Create New</a>
</p>

<div class="p-4">
    <table class="w-100">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().WorkerId)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Role)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="game-card mb-3">
                    <td class="p-3">@item.WorkerId</td>
                    <td>@item.Name</td>
                    <td class="player-count">@item.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.WorkerId" class="btn btn-sm btn-outline-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.WorkerId" class="btn btn-sm btn-outline-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.WorkerId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
