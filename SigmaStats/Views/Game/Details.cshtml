@model SigmApi.Models.Dtos.GameDto

@{
    ViewData["Title"] = "Game Details";
}

<h2>@Model.Name</h2>
<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate</dd>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.Company?.Name</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Tags.Select(t => t.Name))</dd>

        <dt class="col-sm-2">Genres</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Genres.Select(g => g.Name))</dd>
    </dl>
</div>


<a asp-action="Edit" asp-route-id="@Model.AppId" class="btn btn-outline-warning me-2">Edit</a>

<a asp-action="Index" class="btn btn-secondary me-2">All Games</a>

@if (Model.CompanyId != null)
{
    <a asp-controller="Company" asp-action="Details" asp-route-id="@Model.Company?.CompanyId" class="btn btn-outline-light">Back to Company</a>
}
